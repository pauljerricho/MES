$(document).ready(function() {
	$.ajax({
		url: '/trans_page_file/',
		type: 'POST',
		cache: false,
		data: {
			"mod": "data",
			"ajax_link_page": "/header.php"
		},
		dataType: 'json',
		success: function(data) {
			if (!data.userid) {
				$("#top_menu > li:nth-child(n+6)").hide();
			} else {
				var logged = data.name + "(" + data.id + ")님[level:"+data.level+",point:"+data.point+"]";
				$("#top_menu > li:nth-child(7)").text(logged);
				$("#top_menu > li:nth-child(-n+6)").hide();
			}

			if (data.userlevel == "1") {
				$("#top_menu > li:nth-child(15)").show();
			} else {
				$("#top_menu > li:nth-child(15)").hide();
			}
		},
		error: function(request, status, error) {
			alert("데이터 조회 중 오류가 발생했습니다.");
			console.log("code:" + request.status + "\n"+"message:" + request.responseText + "\n"+"error:" + error);
		}
	});

	$("#top-menu > li:nth-child(6)").hide();
	$("#top-menu > li:nth-child(13)").click(function() {
		let formData = new FormData();
		formData.append("ajax_link_page", "/header.php");
		formData.append("mod", "logout");
		script_trns_form_submit_ajax(formData, "/index.php");
	});
});