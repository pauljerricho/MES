<?php 
$num =$_GET["num"];
$page =$_GET["page"];
$lib->lib_fun("session_chk");
$session_chk->session_chk_(array($_SESSION['userid']),"로그인 해주세요!","location.href='/index.php';","");

$lib->lib_fun("message");
$lib->lib_fun("value_check2");
if(!$value_check2->value_check2_(array($num,$page),"")){
    $message->message_("인자가 부족하여 처리할 수 없습니다.","history.back();","exit");
}

$lib->lib_fun("db_connect");
$db_connect->db_connect_();

$lib->lib_fun("data_ione_row_return");
$row = $data_ione_row_return->data_ione_row_return_("*","board","num='$num'","","");

if($row["file_copied"]){
    $file_path = "./data/".$row["file_copied"];
    unlink($file_path);
}

$lib->lib_fun("dbi_update");
$lib->lib_fun("dbi_update");
$sql = $dbi_update->dbi_update_("board","subject='$subject',content='$content',file_type='$update_text'","num='$num'");

if($sql){
    $message->message_("입력 중 오류가 발생했습니다.","history.back();","exit");
}

$db_connect->db_close();
$message->nomessage_("location.href='bd_list.php?page=$page';","exit");
